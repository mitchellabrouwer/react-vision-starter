{
  "expo": {
    "name": "expo-starter-kit-typescript",
    "slug": "expo-starter-kit-typescript",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "deploymentTarget": "12.0",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to access your photos",
        "NSPhotoLibraryAddUsageDescription": "Allow $(PRODUCT_NAME) to save photos",
        "NSCameraUsageDescription": "This app needs access to camera for AR features",
        "NSMicrophoneUsageDescription": "This app needs access to microphone for AR features",
        "NSLocationWhenInUseUsageDescription": "This app needs location access for AR features"
      },
      "bundleIdentifier": "com.mitchellbrouwer.expo-starter-kit-typescript"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.mitchellbrouwer.expostarterkittypescript"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "@reactvision/react-viro",
        {
          "cameraUsageDescription": "This app needs access to camera for AR features",
          "microphoneUsageDescription": "This app needs access to microphone for AR features"
        }
      ]
    ],
    "experiments": {
      "newArchitecture": true
    }
  }
}
